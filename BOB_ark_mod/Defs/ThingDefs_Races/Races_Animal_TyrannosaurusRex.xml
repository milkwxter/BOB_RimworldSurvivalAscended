      <body>Bird</body>
      <leatherDef>Leather_Lizard</leatherDef>
      <baseHungerRate>0.2</baseHungerRate>
      <baseBodySize>2.0</baseBodySize>
      <baseHealthScale>3</baseHealthScale>
      <foodType>CarnivoreAnimalStrict</foodType>
